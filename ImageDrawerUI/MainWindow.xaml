<Window x:Class="ImageDrawerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageDrawerUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" MinWidth="200" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button x:Name="button" Content="Select image" HorizontalAlignment="Left" Margin="56,193,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        </Grid>
        <Viewbox Grid.Column="1">
            <Image x:Name="image" HorizontalAlignment="Stretch" Stretch="Uniform" VerticalAlignment="Stretch" 
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Viewbox>
    </Grid>
</Window>
