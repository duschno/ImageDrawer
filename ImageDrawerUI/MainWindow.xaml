<Window x:Class="ImageDrawerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Name="Window"
        Title="RidgeDrawer" Height="600" Width="1000" MinWidth="400" MinHeight="400" KeyDown="Window_KeyDown">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Button}" x:Key="FullsizeButtonStyle">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="Cursor" Value="Arrow"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="False">
                        <Setter Property="Opacity" Value="0.5"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" MinWidth="200" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="1" Background="White">
            <TextBox x:Name="linescounttb" PreviewTextInput="NumberValidationTextBox" Height="20" TextWrapping="Wrap" Text="120" 
                     VerticalAlignment="Top" Width="83" Margin="103,190,0,0" HorizontalAlignment="Left" KeyDown="paramchange_KeyDown"/>
            <Label x:Name="linescountl" Content="LinesCount" VerticalAlignment="Top" Margin="29,187,0,0" HorizontalAlignment="Left"/>

            <TextBox x:Name="Widthtb" Height="20" PreviewTextInput="NumberValidationTextBox" TextWrapping="Wrap" Text="1" 
                     VerticalAlignment="Top" Width="83" Margin="103,218,0,0" HorizontalAlignment="Left" KeyDown="paramchange_KeyDown"/>
            <Label x:Name="Widthl" Content="Width" VerticalAlignment="Top" Margin="29,215,0,0" HorizontalAlignment="Left"/>

            <TextBox x:Name="Factortb" Height="20" PreviewTextInput="NumberValidationTextBox" TextWrapping="Wrap" Text="5" 
                     VerticalAlignment="Top" Width="83" Margin="103,246,0,0" HorizontalAlignment="Left" KeyDown="paramchange_KeyDown"/>
            <Label x:Name="Factorl" Content="Factor" VerticalAlignment="Top" Margin="29,243,0,0" HorizontalAlignment="Left"/>

            <TextBox x:Name="ChunkSizetb" Height="20" PreviewTextInput="NumberValidationTextBox" TextWrapping="Wrap" Text="5" 
                     VerticalAlignment="Top" Width="83" Margin="103,274,0,0" HorizontalAlignment="Left" KeyDown="paramchange_KeyDown"/>
            <Label x:Name="ChunkSizel" Content="ChunkSize" VerticalAlignment="Top" Margin="29,271,0,0" HorizontalAlignment="Left"/>
            
            <Button x:Name="button" Content="Select image (O)" HorizontalAlignment="Center" Margin="0,40,0,0"
                    VerticalAlignment="Top" Width="100" Click="button_Click"/>
            <Button x:Name="comparebuton" Content="Compare (C)" HorizontalAlignment="Center" Margin="0,80,0,0"
                    VerticalAlignment="Top" Width="100" Click="comparebuton_Click"/>
            <Button x:Name="savebuton" Content="Save (S)" HorizontalAlignment="Center" Margin="0,120,0,0"
                    VerticalAlignment="Top" Width="100" Click="savebuton_Click"/>
            
            <Label x:Name="Smoothingl" Content="Smoothing" VerticalAlignment="Top" Margin="29,307,0,0" HorizontalAlignment="Left"/>
            <ComboBox x:Name="Smoothingcb" HorizontalAlignment="Left" Margin="103,313,0,0" VerticalAlignment="Top" 
                      Width="83" Height="20" SelectionChanged="Smoothingcb_SelectionChanged" />
            <ComboBox x:Name="LineTypecb" HorizontalAlignment="Left" Margin="103,344,0,0" VerticalAlignment="Top" 
                      Width="83" Height="20" SelectionChanged="Smoothingcb_SelectionChanged"/>
            <ComboBox x:Name="Methodcb" HorizontalAlignment="Left" Margin="103,375,0,0" VerticalAlignment="Top" 
                      Width="83" Height="20" SelectionChanged="Smoothingcb_SelectionChanged"/>
            <Label x:Name="LineTypel" Content="LineType" VerticalAlignment="Top" Margin="29,338,0,0" HorizontalAlignment="Left"/>
            <Label x:Name="Methodl" Content="Method" VerticalAlignment="Top" Margin="29,369,0,0" HorizontalAlignment="Left"/>
        </Grid>
        <Grid Name="ImageGrid" SnapsToDevicePixels="True" UseLayoutRounding="True" Grid.Column="1"
          MouseWheel="image_MouseWheel"  MouseMove="image_MouseMove" 
          MouseLeftButtonDown="image_MouseLeftButtonDown" MouseLeftButtonUp="image_MouseLeftButtonUp"
          Loaded="ImageGrid_Loaded" SizeChanged="ImageGrid_SizeChanged">
            <Button x:Name="FullsizeButton" Content="Fullsize (0/F)" Style="{StaticResource FullsizeButtonStyle}" 
                    HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" 
                    Panel.ZIndex="2" Width="70" Height="25" Click="FullsizeButton_Click"/>
            <Image x:Name="image" Stretch="None" Panel.ZIndex="1"/>
            <Rectangle Fill="Gray"/>
        </Grid>
    </Grid>
</Window>
