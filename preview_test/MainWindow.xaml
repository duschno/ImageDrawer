<Window x:Class="preview_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:preview_test"
        mc:Ignorable="d"
        x:Name="Window"
        Title="MainWindow" Height="450" Width="800">
    <Grid MouseWheel="image_MouseWheel">
        <Image x:Name="image" HorizontalAlignment="Stretch" Stretch="Uniform" VerticalAlignment="Stretch"
                RenderOptions.BitmapScalingMode="Linear" Source="Ladas.jpg" MouseMove="image_MouseMove" 
               MouseLeftButtonDown="image_MouseLeftButtonDown" MouseLeftButtonUp="image_MouseLeftButtonUp" UseLayoutRounding="True"/>
    </Grid>
</Window>
